<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAllCaps="true"
            android:id="@+id/txvDealerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Dealer Name"/>

        <include layout="@layout/divider" />

    </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Dealer Code"
                android:layout_alignParentLeft="true"
                android:id="@+id/lblDealerCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="end"
                android:layout_toRightOf="@id/lblDealerCode"
                android:layout_toEndOf="@id/lblDealerCode"
                android:paddingLeft="5dp"
                android:id="@+id/txvDealerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000111"
                />

        </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Address"
            android:layout_alignParentLeft="true"
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="end"
            android:layout_toRightOf="@id/lblName"
            android:layout_toEndOf="@id/lblName"
            android:paddingLeft="5dp"
            android:id="@+id/txvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Martin Road, Kampala Road"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:gravity="end"
            android:layout_toRightOf="@id/lblEmail"
            android:id="@+id/txvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dealer@email.com"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Phone number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/lblLocation"
            android:gravity="end"
            android:id="@+id/txvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0701081899"/>
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="@dimen/padding_eight"
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight="1"
            android:id="@+id/txvBtnChooseDealer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            fancy:fb_borderColor="@color/colorDashboardIcons"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="@android:color/transparent"
            fancy:fb_radius="5dp"
            fancy:fb_text="Select Dealer"
            fancy:fb_textColor="@color/colorDashboardIcons"
            android:layout_marginRight="5dp"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/txvBtnViewLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            fancy:fb_borderColor="@color/colorDashboardIcons"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="@android:color/transparent"
            fancy:fb_radius="5dp"
            fancy:fb_text="View Location"
            fancy:fb_textColor="@color/colorDashboardIcons" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:paddingTop="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvBtnChooseDealerOld"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:text="Choose"
            android:background="@drawable/badge_success"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:background="@drawable/badge_failed"
            android:gravity="center"
            android:id="@+id/txvBtnViewLocationOld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/md_white_1000"
            android:text="View location"/>
    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>