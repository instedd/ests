<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:activity="ug.co.sampletracker.app.components.auth.login.Login">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/landing_page_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="36sp"
                    android:gravity="center_horizontal"
                    android:lineSpacingMultiplier="1.2"
                    android:text="The most convenient way of ordering for construction materials"/>

                <Button
                    android:id="@+id/btnLaunchReferenceVerification"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    style="@style/ButtonSquareAccentBorder"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="@string/customer_type_direct"/>

                <Button
                    android:id="@+id/btnLaunchDashboard"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    style="@style/ButtonSquareWhiteBorder"
                    android:textColor="@color/md_white_1000"
                    android:text="@string/customer_type_other"/>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>

