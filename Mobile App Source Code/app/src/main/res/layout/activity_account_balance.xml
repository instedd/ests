<android.support.v7.widget.CardView style="@style/CardStyle"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:id="@+id/txvBalanceAvailableBalance"
            android:gravity="center"
            android:text="Balance: 0000.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/font_level_1"
                    android:id="@+id/txvBalanceCreditLimit"
                    android:gravity="center"
                    android:text="Limit: 0000.000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:visibility="gone"
                    android:background="#cecece"
                    android:layout_alignParentRight="true"
                    android:layout_width="1px"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:id="@+id/txvBalanceCreditUsed"
                android:gravity="center"
                android:text="Used: 0000.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>